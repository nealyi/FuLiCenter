<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.nealyi.app">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
            android:name=".FuLiCenterApplication"
            android:allowBackup="true"
            android:icon="@mipmap/launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity"/>
        <activity
                android:name=".activity.GoodsDetailActivity"
                android:label="@string/title_activity_goods_detail"
                android:theme="@style/AppTheme">
        </activity>
        <activity
                android:name=".activity.BoutiqueChildActivity"
                android:label="@string/title_activity_boutique_child"
                android:theme="@style/AppTheme">
        </activity>
        <activity
                android:name=".activity.CategoryChildActivity"
                android:label="@string/title_activity_category_child"
                android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>